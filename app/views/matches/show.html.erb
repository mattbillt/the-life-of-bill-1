<h1>Match: <%= @match.name %></h1>

<p>Date: <%= @match.date %></p>
<p>Location: <%= @match.location %></p>
<p>Competition: <%= link_to @match.competition, competition_match_path %></p>
<p>Review: <%= @match.review %></p>

<p><%= link_to 'Edit Match', edit_match_path(@match) %></p>


<p><%= link_to 'Delete Match',
  match_path(@match),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>

<p><%= link_to 'Back to list', matches_path %></p>
